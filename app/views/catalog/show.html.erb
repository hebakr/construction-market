<div id="carouselExampleSlidesOnly" class="carousel slide catalog" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="https://loremflickr.com/800/400" alt="<%= @category.name %>">

      <div class="carousel-caption d-none d-md-block">
        <h3><%= @category.name %></h3>
      </div>
    </div>
  </div>
</div>


<table class="table">
  <tr>
    <th>Name</th>
    <th>Average Price</th>
    <th>Model Code</th>
    <th>Years</th>
  </tr>
  <% @category.products.each do |product| %>
  <tr>
    <td>
      <%= link_to product.name, catalog_product_path(@category, product) %>
    </td>
    <td>100 L.E</td>
    <td>0012356</td>
    <td>2017/2018</td>
  </tr>
  <% end %>
</table>



